rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Company settings collection
    match /settings/company {
      // Anyone authenticated can read and write company settings
      allow read, write: if isAuthenticated();
    }
    
    // Customers collection
    match /customers/{customerId} {
      allow read, write: if isAuthenticated();
    }
    
    // Invoices collection
    match /invoices/{invoiceId} {
      // Allow authenticated users to read and write invoices
      allow read, write: if isAuthenticated();
      // Allow public read access for Google Sheets sync (Apps Script)
      allow read: if true;
    }
    
    // Users collection (optional, for user profiles/roles)
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
      allow read: if isAuthenticated(); // Allow reading other user profiles for UI
    }
    
    // Deny all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
